{% extends 'baseBack.html.twig' %}
{% block title %}Mes produits{% endblock %}
{% block content %}
    <h1>CategorieProduit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th hidden>Id</th>
                <th>NomCat</th>
                <th>DescriptionCat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie_produit in categorie_produits %}
            <tr>
                <td>{{ categorie_produit.id }}</td>
                <td>{{ categorie_produit.nomCat }}</td>
                <td>{{ categorie_produit.descriptionCat }}</td>
                <td>
                    <a href="{{ path('categorie_produit_show', {'id': categorie_produit.id}) }}">show</a>
                    <a href="{{ path('categorie_produit_edit', {'id': categorie_produit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categorie_produit_new') }}">Create new</a>
{% endblock %}
